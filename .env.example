# rec local-first defaults
# Leave external provider keys empty unless you explicitly opt into cloud providers.

REC_ASR_PROVIDER=local
REC_SUMMARY_PROVIDER=local
REC_DEFAULT_LANG=pt
REC_OUTPUT_LANG=pt
REC_CONTINUE_ON_ERROR=true
REC_ASR_MODEL_SIZE=small
REC_ASR_DEVICE=auto
REC_ASR_COMPUTE_TYPE=int8
REC_ASR_BEAM_SIZE=5
REC_ASR_VAD_FILTER=true
REC_ASR_MAX_RETRIES=3
REC_SUMMARY_LOCAL_BACKEND=ollama
REC_SUMMARY_MODEL=llama3.2
REC_SUMMARY_MAX_CHUNK_TOKENS=1200
REC_SUMMARY_MAX_CHUNK_SECONDS=900

# Optional external providers (only required when provider is selected)
OPENAI_API_KEY=
DEEPGRAM_API_KEY=
GROQ_API_KEY=

# Optional local backends
OLLAMA_BASE_URL=http://localhost:11434
LLAMACPP_SERVER_URL=http://localhost:8080
